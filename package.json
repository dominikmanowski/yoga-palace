{
  "name": "yoga-palace",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "watch:pug": "pug ./src/pug/index.pug  -o ./src/ -p index.html -P -w",
    "watch:sass": "node-sass ./src/sass/main.sass ./src/css/style.css -w",
    "serve": "browser-sync start --server './src/' --files './src/css/*.css, './src/index.html -b 'chromium-browser'",
    "start": "npm-run-all --parallel serve watch:pug watch:sass",
    "compile:sass": "node-sass sass/main.scss css/style.comp.css",
    "concat:css": "concat -o css/style.concat.css css/icon-font.css css/style.comp.css",
    "prefix:css": "postcss -use autoprefixer -b 'last 10 versions' -o css/style.concat.css css/style.prefix.css",
    "compress:css": "node-sass css/style.prefix.css css/style.min.css --output-style compressed",
    "build:css": "npm-run-all compile:css concat:css prefix:css compress:css"
  },
  "author": "Dominik Manowski",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^9.0.1",
    "browser-sync": "^2.24.6",
    "concat": "^1.0.3",
    "node-sass": "^4.9.2",
    "npm-run-all": "^4.1.3",
    "postcss-cli": "^6.0.0",
    "pug": "^2.0.3",
    "sass-loader": "^7.0.3"
  },
  "dependencies": {
    "pug-cli": "^1.0.0-alpha6"
  }
}
